# .env.example
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Golf Club Website Configuration
GOLF_CLUB_URL=https://www.thejeremy.com
GOLF_USERNAME=your_username_here
GOLF_PASSWORD=your_password_here
HEADLESS_BROWSER=false

# Database Configuration
DATABASE_URL=postgresql://golf_user:golf_pass@localhost:5432/golf_booking

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Selenium Configuration
SELENIUM_HUB_URL=http://localhost:4444

# Notification Settings
# Twilio SMS Alerts
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
ALERT_PHONE_NUMBER=+1987654321

# Email Alerts
SENDGRID_API_KEY=your_sendgrid_api_key_here
ALERT_EMAIL=your_email@example.com
FROM_EMAIL=noreply@yourdomain.com

# Application Settings
LOG_LEVEL=INFO
RETRY_ATTEMPTS=5
RETRY_DELAY_MINUTES=5
MAX_RETRY_DURATION_MINUTES=30

# Development Settings
DEBUG=false
HEADLESS_BROWSER=true